@model CourseWorkData.Models.Doctor
@{
    ViewBag.Title = "Doctor";
}
<h2>Добавление врача</h2>
<form asp-action="CreateDoctor" asp-controller="home">
    <p>
        <label asp-for="LastName">Фамилия</label><br />
        <input type="text" asp-for="LastName" />
        <span asp-validation-for="LastName" />
    </p>
    <p>
        <label asp-for="FirstName">Имя</label><br />
        <input type="text" asp-for="FirstName" />
        <span asp-validation-for="FirstName" />
    </p>
    <p>
        <label asp-for="PatrName">Отчество</label><br />
        <input type="text" asp-for="PatrName" />
        <span asp-validation-for="PatrName" />
    </p>
    <div>
       <input type="radio" name="value" value="1">
       <label for="contactChoice1">Удалить</label>

        <input type="radio" name="value" value="0">
       <label for="contactChoice2">Добавить</label>
    </div>
    <p>
        <input type="submit" value="Отправить" />
    </p>
</form>
@if (ViewBag.error != null)
{        
    @foreach (var item in ViewBag.error)
    {
                 <p>@item.ErrorMessage</p>
    }
}
<p><a asp-action="ShowDoctor">Показать врачей</a></p>
